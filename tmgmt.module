/**
 * Returns a list of flagged translator labels. If a translator is not available
 * it will be suffixed with a short text explaining why it is not available.
 * This can either be because the selected language combination is not supported
 * or because the translator service can't be reached.
 *
 * @param $source_language
 *   The source language.
 * @param $target_language
 *   The target language.
 *
 * @return array
 *   An array of flagged translator labels.
 */
function tmgmt_translator_labels_flagged($source_language, $target_language) {
  $labels = array();
  foreach (tmgmt_translator_load_multiple(FALSE) as $translator) {
    if (!$translator->isAvailable()) {
      $labels[$translator->name] = t('@label (not available)', array('@label' => $translator->label()));
    }
    elseif (!array_key_exists($target_language, $translator->getSupportedTargetLanguages($source_language))) {
      $labels[$translator->name] = t('@label (not available for this language)', array('@label' => $translator->label()));
    }
    else {
      $labels[$translator->name] = $translator->label();
    }
  }
  return $labels;
}
